template<typename T>
int sequence<T>::check_invariantsI()
{
    int invariantsHold = DDS_FALSE;

    if (this->_length > this->_maximum) 
    {

        return invariantsHold;
    }
    if (this->_maximum > 0 && this->_buffer == NULL) 
    {

